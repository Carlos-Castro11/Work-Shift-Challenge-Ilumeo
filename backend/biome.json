{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noUnusedTemplateLiteral": "off"
			},
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "off",
				"noUnusedVariables": {
					"options": {
						"ignoreRestSiblings": true
					},
					"level": "error",
					"fix": "none"
				}
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"arrowParentheses": "always",
			"trailingCommas": "all",
			"semicolons": "asNeeded",
			"lineWidth": 80,
			"bracketSameLine": true,
			"bracketSpacing": true,
			"indentStyle": "space",
			"indentWidth": 2
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}