{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",    
    "rootDir": "./src",         
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": ["prisma/seed", "vitest.config.ts"]
}
